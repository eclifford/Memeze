!!!
html
	head
		title= title
		link(href='http://fonts.googleapis.com/css?family=Electrolize', rel='stylesheet', type='text/css')
		!= nap.css('all')
		!= nap.jst('templates')
		!= nap.js('app')


	body
		div#container 
			div#header 
				a(href='/')
					img(src='/images/logo.png')
				div#loginStatus
					- if(everyauth.loggedIn)
						img(src="http://graph.facebook.com/#{everyauth.facebook.user.id}/picture", style='border: solid 1px #ccc')
						//- p= JSON.stringify(everyauth.facebook.user)
						br
						a(href='/logout') Logout

					- else
						a(href='/auth/facebook') Login
			div#menu
				a(href='/posts/new')
					| New Post 
				br
				a(href='/posts')
					| View Posts
			div#content!= body
			div#footer
